{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "lib",
    "target": "es5",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "lib": ["es5", "es6", "es2017", "es2018"]
  },
  "include": ["src/**/*"],
  "exclude": ["**/node_modules/**", "**/test/**/*.*", "**/lib/**/*.*"]
}
