{
	"compilerOptions": {
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"outDir": "dist",
		"target": "es5",
		"moduleResolution": "node",
		"module": "commonjs",
		"declaration": true,
		"sourceMap": true,
		"lib": [
			"es5",
			"es6",
			"es2017",
			"es2018"
		]
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"./src/**/*.spec.ts"
	]
}
