{
	"defaultSeverity": "error",
	"extends": [
		"tslint:recommended"
	],
	"jsRules": {},
	"rules": {
		"array-type": false,
		"indent": [
			true,
			"tabs"
		],
		"linebreak-style": [
			true,
			"LF"
		],
		"interface-name": false,
		"quotemark": [
			true,
			"single"
		],
		"semicolon": [
			true,
			"always"
		],
		"no-empty": [
			true,
			"allow-empty-functions",
			"allow-empty-catch"
		],
		"no-console": false,
		"curly": true,
		"triple-equals": true,
		"max-classes-per-file": false,
		"max-line-length": [
			true,
			140
		],
		"no-string-throw": true,
		"no-var-keyword": true,
		"no-trailing-whitespace": true,
		"object-literal-key-quotes": [
			true,
			"as-needed"
		],
		"trailing-comma": [
			true,
			{
				"multiline": "always",
				"singleline": "never"
			}
		]
	},
	"rulesDirectory": []
}
